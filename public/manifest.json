{
  "manifest_version": 3,
  "name": "Better CORS",
  "version": "1.0.0",
  "description": "A Chrome extension for handling CORS issues",
  "action": {
    "default_popup": "index.html",
    "default_icon": "inactive.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
} 